<% include partials/header.ejs %>

<br><br><br><br>
<center>
<div style="margin-top:200px">
<button onclick="document.getElementById('id01').style.display='block'" style="width:auto;">Login</button>
<h4>
  IF NOT A USER PLEASE REGISTER !!!!
</h4>
<a class="btn btn-warning" href="/register">Register</a>
</div>
</center>
<div id="id01" class="modal">
 <div style="width:50%; margin-left:25%">   
  <form action="/login" method="POST" class="modal-content animate">
        <span  style="float:right" onclick="document.getElementById('id01').style.display='none'" class="close" title="Close Modal">&times;</span>
  <center>
    <div class="imgcontainer" style="width:50%;height:30%;">
      <img src="\images\login-img.png" alt="here image to be placed later" class="avatar">
    </div>
    </center>
    <div class="container">
      <label for="uname"><b>Username</b></label>
      <input type="text" placeholder="Enter Username" name="username" required>

      <label for="psw"><b>Password</b></label>
      <input type="password" placeholder="Enter Password" name="password" required>
        
      <button type="submit">Login</button>
      
    </div>

    <div class="container" style="background-color:#f1f1f1">
      <button type="button" onclick="document.getElementById('id01').style.display='none'" class="cancelbtn">Cancel</button>
     
    </div>
  </form>
  </div>
</div>

<script>
// Get the modal
var modal = document.getElementById('id01');

// When the user clicks anywhere outside of the modal, close it
window.onclick = function(event) {
    if (event.target == modal) {
        modal.style.display = "none";
    }
}
</script>
