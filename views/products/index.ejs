 <div id="main">
  <div style="widhth:80%;padding-left:5%;position:sticky;">
     <button class="openbtn btn" onclick="openNav()">☰ Categories</button>
     &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
     <a class="btn btn-lg btn-primary" style="margin-top:20px; margin-bottom:15px;" href="/products/new">ADD NEW ARTICLE</a></div>
    

  <hr>


<div class="row text-center" style="margin-left:2%">
   
   	<% products.forEach(function(product){ %>

      <div style="padding:25px;margin-left:1%; ">
        <div class="card" style="width: 300px; height:320px;">        
          <% if(product.genre == "CSE"){ %>
              <img src="/images/cse.png" style="width:100%;height:50%">
          <% }else if(product.genre == "MECHANICAL" ){ %>
              <img src="/images/mech.png" style="width:100%;height:50%">
          <% }else if(product.genre == "ELECTRONICS"){ %>
              <img src="/images/ac.png" style="width:100%;height:50%">
          <% }else if(product.genre == "CIVIL"){ %>
              <img src="/images/civil.png" style="width:100%;height:50%">
          <% }else if(product.genre == "ART"){ %>
              <img src="/images/dog.png" style="width:100%;height:50%">
          <% }else if(product.genre == "LITERATURE"){ %>
              <img src="/images/dog.png" style="width:100%;height:50%">
          <% } %>    
          <h3><%= product.title %></h3>
          <p><%= product.genre %><br><%= product.author.username %></p> 
          <a href="/products/<%= product._id %>" class="btn btn-primary">MORE INFO</a>
        </div>
      </div>
    <% }); %>
</div>



